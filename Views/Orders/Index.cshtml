@model IEnumerable<SweaterProductionOrders.Models.Order>
@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Create New Order</a>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Sweater Type</th>
            <th>Quantity</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.CustomerName</td>
                <td>@order.SweaterType</td>
                <td>@order.Quantity</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.OrderID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.OrderID" class="btn btn-danger">Delete</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>
