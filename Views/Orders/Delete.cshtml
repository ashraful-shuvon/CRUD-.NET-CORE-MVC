@model SweaterProductionOrders.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<div>
    <h4>Are you sure you want to delete this order?</h4>
    <div><strong>Order ID:</strong> @Model.OrderID</div>
    <div><strong>Customer Name:</strong> @Model.CustomerName</div>
    <div><strong>Sweater Type:</strong> @Model.SweaterType</div>
    <div><strong>Quantity:</strong> @Model.Quantity</div>
    <div><strong>Order Date:</strong> @Model.OrderDate.ToShortDateString()</div>
    <div><strong>Status:</strong> @Model.Status</div>
</div>

<p>[DEBUG] OrderID in view: @Model.OrderID</p>

<form asp-action="DeleteConfirmed" asp-controller="Orders" method="post">
    <input type="hidden" asp-for="OrderID" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</form>
